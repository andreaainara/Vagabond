<div class="col-md-4">
  <% if current_user == @user %>

      Welcome,
      <strong><%= @user.first_name %>
          <%= @user.last_name%></strong>!<br>
      You are logged in under
      <em><%= @user.email %></em>
      <br>
      <strong>Current City:
      </strong><%= @user.current_city %><br>
      <!-- <%= @user.email %><br> -->
      <strong>Member Since:
      </strong><%= @user.created_at %><br>
      <!-- <%= link_to "Edit", edit_user_path(@user) %> -->

      <button type="button" class="btn btn-default btn-xs"><%= link_to "Edit", edit_user_path(@user) %></button>

    <% else %>

      <strong>Name:
      </strong><%= @user.first_name %>
      <%= @user.last_name%><br>
      <strong>From:
      </strong><%= @user.current_city %><br>
      <strong>Member Since:
      </strong><%= @user.created_at %><br>

    <% end %>

    <section class="picture-layout">
      <header class="row bio-info">
        <section class="picture">
          <div class="col-sm-6 profile-1">
            <div class="picture-img">
              <%= cl_image_tag(@user.picture.url) %>

              <span style="vertical-align:middle">
                <%= form_for @user do |f| %>
                <%= f.file_field :picture %>
                <%= f.hidden_field(:picture_cache) %>
                <%= f.submit "Submit" %>
                <% end %>
              </span>
            </div>
          </div>
        </section>
      </header>
    </section>

</div>
<table class="table">
  <div class="col-md-8">
      <div class="container">
          <h4><%= @user.first_name %>'s posts:</h4>
          <% @posts.each do |post| %>

                <li><%= link_to post.title, posts_path(post) %></li>

          <% end %>
      </div>
  </div>
</table>
