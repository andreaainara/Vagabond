  <div class="col-md-12">
    <h3>Pick a city to review:<h3>
  </div>
</div>

<div class="cities">
  <% @cities.each do |city| %>
    <p>
      <strong><%= link_to city.name, city_path(city) %></strong><br>
    </p>
  <% end %>
</div>
