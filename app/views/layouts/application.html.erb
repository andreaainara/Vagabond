<!DOCTYPE html>
<html>
<head>
  <title>VagabondApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>
<body>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <% if current_user %>
        <button class= "btn btn-primary-outline"><%= link_to "Home", users_path %></button>
         <button class= "btn btn-primary-outline"><%= link_to "Profile", user_path(current_user) %></button>
         <button class= "btn btn-primary-outline"><%= link_to "Log Out", logout_path %></button>
       <% else %>
         <button class= "btn btn-primary-outline"><%= link_to "Create Account", new_user_path %></button>
         <button class= "btn btn-primary-outline"><%= link_to "Log In", login_path %></button>
       <% end %>
    </div>
  </nav>

  <div>
    <% flash.each do |key, value| %>
      <div>
        <a href="" data-dismiss="alert">Ã—</a>
        <%= value %>
      </div>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
