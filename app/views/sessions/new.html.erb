
<div class="col-sm-4">
  Login<br>
  <%= form_for @user, url: "/sessions", html: {class: "form-horizontal"}, method: "post" do |f| %>
    <div>
      <%= f.text_field :email, placeholder: "Email", required: true, class: "form-control" %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: "Password", required: true, class: "form-control" %>
    </div>
    <%= f.submit "Sign In", html: {class: "btn btn-default"} %>
  <% end %>
</div>
